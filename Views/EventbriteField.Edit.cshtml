@using Etch.OrchardCore.Fields.Eventbrite

@model Etch.OrchardCore.Fields.Eventbrite.ViewModels.EditEventbriteFieldViewModel

@if (!Model.HasApiKey)
{
    <p class="alert alert-warning">
        <a asp-route-area="OrchardCore.Settings" asp-controller="Admin" asp-action="Index" asp-route-groupId="@Constants.SettingsGroupId" asp-route-returnUrl="@FullRequestPath">@T["Please specify Eventbrite API key to use for field."]</a>
    </p>

}
else
{
    <fieldset class="form-group">
        <div class="row col-sm-6">
            <label asp-for="Value">@T["Event Id"]</label>
            <input type="text" asp-for="Value" class="form-control" />
            <span asp-validation-for="Value"></span>
            <span class="hint">@T["Event Id or Event Dashboard link for the event. E.g. https://www.eventbrite.co.uk/myevent?eid=50902591020"]</span>
        </div>
    </fieldset>
}