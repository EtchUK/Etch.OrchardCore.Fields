@model Etch.OrchardCore.Fields.Values.Settings.ValuesFieldSettings

<div class="form-group">
    <div class="row col-sm-6">
        <label asp-for="Hint">@T["Hint"]</label>
        <textarea asp-for="Hint" rows="2" class="form-control"></textarea>
        <span class="hint">@T["The hint text to display for this field on the editor."]</span>
    </div>
</div>

<div class="form-group">
    <div class="row col-sm-6">
        <label asp-for="EmptyMessage">@T["Empty Collection Message"]</label>
        <textarea asp-for="EmptyMessage" rows="2" class="form-control"></textarea>
        <span class="hint">@T["Content displayed when no items have been added."]</span>
    </div>
</div>

<div class="form-group">
    <div class="row col-sm-6">
        <label asp-for="NewItemPlaceholder">@T["New item input placeholder"]</label>
        <textarea asp-for="NewItemPlaceholder" rows="2" class="form-control"></textarea>
        <span class="hint">@T["Placeholder content in text input for adding new item."]</span>
    </div>
</div>